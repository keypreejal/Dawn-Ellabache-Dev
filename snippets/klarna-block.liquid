{% if product.available == true %}
  {%- if block.settings.klarna_enabled -%}
    {%- if product.metafields.accentuate.hide_klarna == blank -%}
        <div class="item klarna">
          {{ block.settings.klarna_logo }}
          <div class="tooltips">
            <div class="inner">
              {%- render 'klarna', block: block -%}
            </div>
          </div>
        </div>
    {%- endif -%}
  {%- endif -%}
{%- endif -%}